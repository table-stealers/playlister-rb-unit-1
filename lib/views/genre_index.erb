<html>
<head>
  <link rel="stylesheet" href="assets.css">
  </head>
<body>
  <h1>Genres</h1>
  <p><%= @genres.count %></p>
  <ol>
    <% @genres.sort_by!{ |genre| genre.songs.count }.reverse! %>
    <% @genres.each do |genre| %>
      <li>
        <p><a href="genres/<%= genre.name.gsub(' ', '_') %>.html"><%= genre.name.capitalize %> </a>
          - <%= genre.songs.count %> Songs, <%= genre.artists.count %> Artists  </p>
      </li>
    <% end %>
  </ol>
</body>
<div class="footer"> <p> <a href="index.html">Home</a> - Team Table Stealers - all your tables are belong to us
</p>
</div>
</html>